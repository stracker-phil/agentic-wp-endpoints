{
  "name": "stracker-phil/agentic-endpoints",
  "description": "Provides REST endpoints for efficient WP maintenance by an AI agent",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": "^8.1",
    "stracker-phil/wpdi": "dev-main",
    "erusev/parsedown": "^1.7",
    "league/html-to-markdown": "^5.1"
  },
  "require-dev": {
    "phpmetrics/phpmetrics": "^2.9",
    "phpunit/phpunit": "^10",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "AgenticEndpoints\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "tdd": "phpunit --stop-on-failure --colors=true",
    "test": "XDEBUG_MODE=coverage phpunit --coverage-html coverage --coverage-clover coverage/report.xml"
  }
}
